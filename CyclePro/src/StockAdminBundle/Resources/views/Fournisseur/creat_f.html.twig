{%extends "baseAdmin.html.twig" %}
{% block content %}

    {{ form_start(form) }}
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title" style="text-align: center">Ajouter fournisseur</h4>
                <form class="form-sample">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">

                                <div class="col-sm-9">
                                    {{ form_row(form.raisonSociale, {'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">

                                <div class="col-sm-9">
                                    {{ form_row(form.matricule, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">

                                <div class="col-sm-9">
                                    {{ form_row(form.addresse, {'attr':{'class':'form-control'}}) }}

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">

                                <div class="col-sm-9">
                                    {{ form_row(form.mail, {'attr':{'class':'form-control'}}) }}
                                </div>
                                <div class="col-sm-9">


                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">

                                <div class="col-sm-9">

                                    {{ form_row(form.telephone, {'attr':{'class':'form-control'}}) }}
                                </div>
                            </div>
                        </div>

                    </div>

                    <button class="btn btn-primary mr-2" type="submit">Ajouter</button>

                    {{ form_end(form) }}

                </form>
            </div>
        </div>
    </div>


    <script src="{{ asset('Backoffice/../../js/select2.js') }}"></script>



{% endblock %}