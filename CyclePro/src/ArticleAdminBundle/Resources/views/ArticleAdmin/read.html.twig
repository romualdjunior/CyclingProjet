{% extends 'baseAdmin.html.twig' %}
{% block content %}
    <div class="content-wrapper">


        <h4 >Liste des articles</h4>
        <div class="row">
            <div class="col-12 table-responsive">
                <div id="order-listing_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer"><div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="order-listing_length"><label>Afficher <select name="order-listing_length" aria-controls="order-listing" class="form-control"><option value="5">5</option><option value="10">10</option><option value="15">15</option><option value="-1">All</option></select> lignes</label></div></div><div class="col-sm-12 col-md-6">
                            <div id="order-listing_filter" class="dataTables_filter"><label><input type="search" class="form-control" placeholder="Search" aria-controls="order-listing"></label></div></div></div><div class="row"><div class="col-sm-12"><table id="order-listing" class="table dataTable no-footer" role="grid" aria-describedby="order-listing_info">

                                <thead>
                                <tr role="row">
                                    <th  >Category</th>
                                    <th  >Titre</th>
                                    <th>Date Cr√©ation</th>
                                    <th >Auteur</th>
                                    <th  >Contenue</th>
                                    <th  ></th>

                                </tr>

                                </thead>
                                <tbody>
                                {% for i in articles %}

                                    <tr role="row" class="odd">
                                        <td>{{ i.category }}</td>
                                        <td>{{ i.titre }}</td>
                                        <td class="">{{i.dateArt |date('d/m/Y') }}</td>
                                        <td>{{ i.auteur }}</td>
                                        <td>{{ i.contenue }}</td>

                                        <td>
                                            <a class="badge badge-outline-primary" href="{{ path('read_comt',{'id':i.id}) }}">
                                                View</a>
                                        </td>

                                        <td><a class="badge badge-success" href="{{ path('update_article',{'id':i.id}) }}">
                                                Modifier</a>
                                        </td>
                                        <td><a class="badge badge-danger"  href="{{ path('delete_article',{'id':i.id}) }}">
                                                Supprimer</a>
                                        </td>

                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

