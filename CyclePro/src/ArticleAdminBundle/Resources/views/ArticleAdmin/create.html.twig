{%extends "baseAdmin.html.twig" %}
{% block content %}

    {{ form_start(form) }}

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

            <h4 class="card-title" style="text-align: center">Ajouter article</h4>
                    <div class="form-group">
                            <label class="col-sm-3 col-form-label">Category</label>
                                <select name="category" id="category" class="form-control">
                                    <option name="Débutant" value="Débutant">Sport</option>
                                    <option name="Intermediaire" value="Intermediaire">Cycling</option>
                                    <option name="Professionnel" value="Professionnel">Bien etre</option>
                                    <option name="Tous les niveux" value="Tous les niveux">Nutrition</option>

                                </select>
                    </div>

                    <div class="form-group">
                                <label class="col-sm-3 col-form-label">Titre</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.titre,{'attr':{'class':'form-control' }}) }}
                                </div>
                    </div>

                    <div class="form-group">
                    <label class="col-sm-3 col-form-label">Auteur</label>
                                <div class="col-sm-9">
                                    {{ form_widget(form.auteur,{'attr':{'class':'form-control' }}) }}
                                </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 col-form-label">Date création</label>
                        <div class="col-sm-9" type="date">
                            {{ form_widget(form.dateArt,{'attr':{'class':'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 col-form-label">Contenue</label>
                        <div class="col-sm-9">
                        {{ form_widget(form.contenue,{'attr':{'class':'form-control' }}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-3">
                        <div class="dropify-wrapper">
                            <div class="dropify-message"><span class="file-icon"></span>
                                <p>Ajouter photo</p>
                                <p class="dropify-error">Erreur!!</p>
                            </div>
                            <div class="dropify-loader">
                            </div>
                            <div class="dropify-errors-container">
                                <ul></ul></div><input type="file" name="photo" id="photo" class="dropify">
                            <button type="button" class="dropify-clear">Supprimer</button>
                            <div class="dropify-preview">
                                <span class="dropify-render"></span><div class="dropify-infos"><div class="dropify-infos-inner">
                                        <p class="dropify-filename"><span class="file-icon"></span> <span class="dropify-filename-inner"></span>
                                        </p><p class="dropify-infos-message">Drag and drop or click to replace</p></div></div></div></div>
                        </div>
                    </div>
                    <br><br>
                    <center><button class="btn btn-primary btn-block mr-lg-5" type="submit">Ajouter</button></center></div>
                    <br><br>

        </div>
        </div>
    </div>
    {{ form_end(form) }}
    </form>

{% endblock %}
